<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert_rotas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".InsertRotasActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo" />

    <EditText
        android:id="@+id/editNomeRotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:hint="Nome"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editEndinRotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:hint="Endereço Inicial"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editEndfimRotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:hint="Endereço Final"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editLinhaRotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:hint="Linha"
        android:inputType="number"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnCadastrarRotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/com_facebook_tooltip_black_background"
        android:onClick="cadastrarRotas"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="?attr/homeAsUpIndicator"
        android:onClick="selectMainOpetion"/>

</LinearLayout>
